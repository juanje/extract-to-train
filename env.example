# Extract-to-Train Environment Configuration
# Copy this file to .env and modify the values as needed

# ====================================
# üìÑ Document Processing Configuration
# ====================================

# Chunk size in characters (default: 512)
# Smaller chunks = better granularity, more API calls
# Larger chunks = more context, fewer API calls
CHUNK_SIZE=512

# Overlap between chunks in characters (default: 100)
# Helps maintain context continuity between chunks
CHUNK_OVERLAP=100

# ====================================
# ü§ñ Model Configuration
# ====================================

# Ollama server configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=60
OLLAMA_RETRIES=3

# Models for different tasks (must be available in Ollama)
MODEL_EXTRACT=llama3.1:8B
MODEL_VALIDATE=deepseek-r1:8B

# Model temperatures (0.0-1.0)
TEMPERATURE_EXTRACT=0.3
TEMPERATURE_VALIDATE=0.1

# ====================================
# üìä Generation Configuration
# ====================================

# Maximum Q&A pairs to generate per chunk
MAX_PAIRS_PER_CHUNK=3

# Minimum confidence score to accept a Q&A pair (0.0-1.0)
MIN_CONFIDENCE=0.75

# Answer length constraints (in characters)
MIN_ANSWER_LENGTH=50
MAX_ANSWER_LENGTH=500

# ====================================
# üîß Performance Configuration
# ====================================

# Context window size for models
CONTEXT_WINDOW=4096

# Enable verbose logging (true/false)
VERBOSE=false

# ====================================
# üìà Quality Control
# ====================================

# Minimum validation scores (0-10)
MIN_ACCURACY_SCORE=8
MIN_COMPLETENESS_SCORE=7
MIN_CLARITY_SCORE=7
MIN_TRAINING_VALUE_SCORE=8

# Auto-correction attempts (0 to disable)
MAX_CORRECTION_ATTEMPTS=2

# ====================================
# üìÅ Output Configuration
# ====================================

# Default output format (alpaca, sharegpt, openai)
DEFAULT_FORMAT=alpaca

# Include source context in output (true/false)
INCLUDE_CONTEXT=true

# ====================================
# üåê Language Configuration
# ====================================

# Default document language (auto-detected if not set)
# DEFAULT_LANGUAGE=en

# ====================================
# üõ†Ô∏è Development Configuration
# ====================================

# Enable debug mode (true/false)
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO